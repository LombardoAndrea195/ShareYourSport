<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="338dp"
        android:layout_height="40dp"
        android:layout_marginTop="32dp"
        android:text="Share Your Sport "
        android:textColor="@color/blue"
        android:textSize="29sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.713"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/divider"
        android:layout_width="409dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:background="@color/blue"
        android:outlineAmbientShadowColor="@color/blue"
        android:outlineSpotShadowColor="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/search_event"
        android:layout_width="115dp"
        android:layout_height="106dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="40dp"
        android:alpha="122"
        android:autoSizeMaxTextSize="22dp"
        android:clickable="true"
        android:elevation="5dp"
        android:foregroundGravity="fill_horizontal|center|fill_vertical|right|center_horizontal|fill"
        android:scrollbarThumbHorizontal="@android:drawable/btn_plus"
        android:src="@android:drawable/ic_menu_search"
        app:backgroundTint="@android:color/white"
        app:borderWidth="13dp"
        app:fabCustomSize="113sp"
        app:fabSize="mini"
        app:hoveredFocusedTranslationZ="0.2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_event"
        app:maxImageSize="102dp"
        app:pressedTranslationZ="2dp"
        app:useCompatPadding="false" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/new_event"
        android:layout_width="116dp"
        android:layout_height="110dp"
        android:layout_marginTop="792dp"
        android:layout_marginEnd="40dp"
        android:alpha="122"
        android:autoSizeMaxTextSize="22dp"
        android:clickable="true"
        android:elevation="5dp"
        android:foregroundGravity="fill_horizontal|center|fill_vertical|right|center_horizontal|fill"
        android:scrollbarThumbHorizontal="@android:drawable/btn_radio"
        android:src="@android:drawable/ic_input_add"
        app:backgroundTint="@android:color/white"
        app:borderWidth="13dp"
        app:fabCustomSize="113sp"
        app:fabSize="mini"
        app:hoveredFocusedTranslationZ="0.2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:maxImageSize="102dp"
        app:pressedTranslationZ="2dp"
        app:useCompatPadding="false" />
</androidx.constraintlayout.widget.ConstraintLayout>